{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "jsx": "react",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "declarationDir": "./lib/types",
        "baseUrl": ".",
        "outDir": "./lib",
        "noImplicitAny": true,
        "noLib": false,
        "strict": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "pretty": true,
        "paths": {
            "*": ["node_modules"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["**/*.spec.tsx", "**/*.stories.tsx", "node_modules"]
}
